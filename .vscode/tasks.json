{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MCP Chat: Compile (Debug)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/send_to_cursor_chat.py",
                "--command", "compile",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "MCP Chat: Build (Release)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/send_to_cursor_chat.py",
                "--command", "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "MCP Terminal: Compile (Debug)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "compile",
                "--config", "Debug"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "MCP Terminal: Build (Release)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "build"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}