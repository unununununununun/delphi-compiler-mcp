{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MCP: Compile (Debug)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "compile",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "MCP: Build (Release)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "build"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "MCP: Compile Win64 (Debug)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "compile",
                "--platform", "Win64",
                "--config", "Debug"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "MCP: Build Win64 (Release)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/mcp_build_client.py",
                "build",
                "--platform", "Win64"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}